<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>dev.amine</groupId>
    <artifactId>SnmpAgent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <dependencies>
        <dependency>
            <groupId>org.snmp4j</groupId>
            <artifactId>snmp4j</artifactId>
            <version>3.6.5</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.36</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>42.7.3</version>
        </dependency>
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
            <version>5.0.1</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.2.11</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.32</version>
        </dependency>
    </dependencies>
    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.6.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>dev.amine.SNMP.PrintWatchAgent</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.izpack</groupId>
                <artifactId>izpack-maven-plugin</artifactId>
                <version>5.1.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>izpack</goal>
                        </goals>
                        <configuration>
                            <installFile>src/main/izpack/install.xml</installFile>
                            <baseDir>${project.build.directory}</baseDir>
                            <finalName>printwatch-installer</finalName>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.izpack</groupId>
                        <artifactId>izpack-panel</artifactId>
                        <version>5.1.3</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.6.0</version>
                <configuration>
                    <name>Printwatch</name>
                    <appVersion>${project.version}</appVersion>
                    <vendor>Your Company</vendor>
                    <input>${project.build.directory}</input>
                    <destination>${project.build.directory}/dist</destination>
                    <mainJar>${project.artifactId}-${project.version}-jar-with-dependencies.jar</mainJar>
                    <mainClass>dev.amine.SNMP.PrintWatchAgent</mainClass>

                    <!-- Windows options -->
                    <winMenu>true</winMenu>
                    <winShortcut>true</winShortcut>
                    <winPerUserInstall>false</winPerUserInstall>
                    <winDirChooser>true</winDirChooser>
                    <winUpgradeUuid>2e99fdd3-18b6-4fdf-b217-42e73c2b48e9</winUpgradeUuid>

                    <!-- Linux options -->
                    <linuxPackageName>printwatch</linuxPackageName>
                    <linuxAppCategory>Utilities</linuxAppCategory>
                    <linuxShortcut>true</linuxShortcut>
                    <linuxMenuGroup>System</linuxMenuGroup>
                    <linuxRpmLicenseType>MIT</linuxRpmLicenseType>

                    <!-- Mac options -->
                    <macPackageName>Printwatch</macPackageName>
                    <macPackageIdentifier>com.abcsolpro.snmpagent</macPackageIdentifier>
                    <macPackageSigningPrefix>com.abcsolpro.snmpagent</macPackageSigningPrefix>

                    <!-- Java options -->
                    <javaOptions>
                        <javaOption>--no-jre-provision</javaOption>
                    </javaOptions>
                </configuration>
                <executions>
                    <execution>
                        <id>win-msi</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jpackage</goal>
                        </goals>
                        <configuration>
                            <type>msi</type>
                        </configuration>
                    </execution>
                    <execution>
                        <id>linux-deb</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jpackage</goal>
                        </goals>
                        <configuration>
                            <type>deb</type>
                            <linuxShortcut>true</linuxShortcut>
                            <linuxPackageName>printwatch</linuxPackageName>
                            <!-- Add post-install script for auto-starting service -->
                            <arguments>
                                <argument>--linux-shortcut</argument>
                                <argument>--linux-package-name</argument>
                                <argument>printwatch</argument>
                                <argument>--linux-deb-maintainer</argument>
                                <argument>your@email.com</argument>
                                <argument>--linux-post-install-script</argument>
                                <argument>${project.basedir}/src/main/java/dev/amine/SNMP/installerResources/linux/postinstall.sh</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>